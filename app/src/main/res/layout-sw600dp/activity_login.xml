<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin_sw600dp"
    android:paddingLeft="@dimen/edit_text_margin_padding_portrait_sw600dp"
    tools:context=".LoginActivity"
    android:orientation="vertical"
    android:background="#E0E0E0">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="600p portrait"/>

    <android.handyapps.gareth.animalalert.FloatLabelLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:floatLabelTextAppearance="@style/TextAppearance.animalalert.FloatLabel">

    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/activity_layout_width_sw600dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:hint="@string/email"
        android:singleLine="true"
        android:imeOptions="actionNext"/>

    </android.handyapps.gareth.animalalert.FloatLabelLayout>

    <android.handyapps.gareth.animalalert.FloatLabelLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:floatLabelTextAppearance="@style/TextAppearance.animalalert.FloatLabel">

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/activity_layout_width_sw600dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/password"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:layout_marginTop="@dimen/activity_vertical_margin"/>

    </android.handyapps.gareth.animalalert.FloatLabelLayout>

    <RelativeLayout
        android:layout_width="@dimen/activity_button_layout_sw600dp"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:background="@drawable/custom_btn_click"
            android:layout_toStartOf="@+id/btnLogin"
            android:layout_toLeftOf="@+id/btnLogin"
            android:onClick="register"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"/>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:background="@drawable/custom_btn_click"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:onClick="login"
            android:layout_marginTop="@dimen/activity_vertical_margin"/>
    </RelativeLayout>

</LinearLayout>
